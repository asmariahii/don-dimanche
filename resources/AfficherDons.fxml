<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="609.0" prefWidth="974.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherDonsController">
    <!-- Bouton Ajouter -->
    <Button layoutX="27.0" layoutY="56.0" onAction="#handleAjouterDon" text="Ajouter Don pour un utilisateur" />
    <Button layoutX="27.0" layoutY="14.0" onAction="#handleAjouterEtatStatut" text="Ajouter Don Etat statut dons" />

    <Button layoutX="100" layoutY="150" onAction="#handleSupprimerDon" text="Supprimer Dons" />

    <!-- TableView pour afficher les dons -->
    <TableView fx:id="donsTable" layoutX="6.0" layoutY="120.0" prefHeight="474.0" prefWidth="944.0">
        <columns>
            <!-- Colonnes existantes pour les données des dons -->
            <TableColumn fx:id="nomUserColumn" text="Nom" />
            <TableColumn fx:id="prenomUserColumn" text="Prénom" />
            <TableColumn fx:id="emailUserColumn" text="Email" />
            <TableColumn fx:id="numTelColumn" prefWidth="135.20001220703125" text="Numéro de téléphone" />
            <TableColumn fx:id="nbPointsColumn" prefWidth="113.5999755859375" text="Nombre de Points" />
            <TableColumn fx:id="dateAjoutColumn" prefWidth="113.5999755859375" text="Date d'Ajout" />
            <TableColumn fx:id="etatStatutDonsColumn" prefWidth="151.20001220703125" text="État du Statut des Dons" />

        </columns>
    </TableView>
</AnchorPane>
